      <Button layoutX="154.0" layoutY="310.0" mnemonicParsing="false" onAction="#chooseImage" text="Choose Image" />
      <Button layoutX="138.0" layoutY="419.0" mnemonicParsing="false" onAction="#addPost" prefHeight="30.0" prefWidth="122.0" text="+">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="174.0" layoutY="461.0" mnemonicParsing="false" onAction="#backToMain" text="Back" />
      <TextField fx:id="postContent" alignment="TOP_LEFT" layoutX="36.0" layoutY="342.0" prefHeight="67.0" prefWidth="328.0" promptText="Content" />
   </children>
</AnchorPane>

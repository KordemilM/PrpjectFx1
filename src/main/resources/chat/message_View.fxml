                  <Label fx:id="members" maxWidth="1.7976931348623157E308" prefHeight="46.0" prefWidth="247.0" VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <Button layoutX="30.0" layoutY="30.0" mnemonicParsing="false" text="ØŸ">

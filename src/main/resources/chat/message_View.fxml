                  <Insets top="10.0" />
               </HBox.margin>
               <image>
                  <Image url="@image.png" />
               </image>
            </ImageView>
            <VBox prefHeight="72.0" prefWidth="208.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="GroupName" prefHeight="34.0" prefWidth="194.0" text="Group Name">
